@using Microsoft.AspNetCore.Identity
@using _18_E_LEARN.DataAccess.Data.Models.User;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-controller="Admin" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Admin" asp-action="Logout" >
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-controller="Admin" asp-action="SignUp">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Admin" asp-action="SignIn">Login</a>
    </li>
}
</ul>
