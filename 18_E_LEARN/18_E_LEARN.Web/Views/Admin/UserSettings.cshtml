@using _18_E_LEARN.DataAccess.Data.ViewModels.User;
@model UpdateProfileVM
<section class="min-vh-100 mb-8">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0">
                    <div class="text-center pt-4">
                        <h5>Update profile information</h5>
                    </div>
                    <div class="card-body">
                        <form role="form text-left" method="post" asp-controller="Admin" asp-action="UserSettings">
                            @if (@ViewBag.AuthError != null)
                            {
                                <span class="text-danger">@ViewBag.AuthError</span>
                            }
                            <div class="mb-3">
                                <input asp-for="Id" type="hidden" class="form-control" aria-label="Id" aria-describedby="email-addon" />
                                <input asp-for="Name" type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="email-addon">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Surname" type="text" class="form-control" placeholder="Surname" aria-label="Surname" aria-describedby="email-addon">
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Phone number" aria-label="PhoneNumber" aria-describedby="email-addon">
                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="OldPassword" type="password" class="form-control" placeholder="Old password" aria-label="Password" aria-describedby="password-addon">
                                <span class="text-danger" asp-validation-for="OldPassword"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Password" type="password" class="form-control" placeholder="New password" aria-label="Password" aria-describedby="password-addon">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="mb-3">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" aria-label="Confirm Password" aria-describedby="password-addon">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>